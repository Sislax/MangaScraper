@page "/"

<PageTitle>MangaView</PageTitle>

<MudItem xs="8" Style="align-content: center">
	<AuthorizeView Roles="Admin, User">
		<Authorized>
			<MudText Typo="Typo.h1">
				Benvenuto in Manga View @context.User.Identity?.Name! Buona lettura.
				<MudIcon Icon="@Icons.Material.Filled.MenuBook" />
			</MudText>
		</Authorized>
		<NotAuthorized>
			<MudText Typo="Typo.h1">
				Benvenuto in Manga View! Buona lettura.
				<MudIcon Icon="@Icons.Material.Filled.MenuBook" />
			</MudText>
		</NotAuthorized>
	</AuthorizeView>
</MudItem>